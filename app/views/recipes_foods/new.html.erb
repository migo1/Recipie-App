<%= form_with(model: @recipe_food, url: recipe_recipes_foods_path(@recipe)) do |form| %>

  <%= form.hidden_field :recipe_id, value: @recipe.id %>

  <div class="form-field my-3">
  <%= form.label :food_id, style: "display: block" %>
    <%= form.collection_select :food_id, @foods, :id, :name, prompt: "Select a food", class: "form-control my-2 mb-2" %>
  </div>

   <div class="form-field my-3">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class:"form-control my-2" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
