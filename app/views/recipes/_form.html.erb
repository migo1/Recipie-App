<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control mt-2" %>
  </div>

  <div class="form-field my-3">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.number_field :preparation_time, class:"form-control mt-2" %>
  </div>

  <div class="form-field">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.number_field :cooking_time, class:"form-control mt-2" %>
  </div>

  <div class="form-field my-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control mt-2" %>
  </div>

  <div class="form-field d-flex gap-3">
    <%= form.label :public, style: "display: block" %>
    <%= form.check_box :public, class:"mt-2" %>
  </div>

  <div class="form-field my-3">
    <% form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id, value:current_user.id, type: :hidden %>
  </div>

  <div class="form-field">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
