<% content_for :title, "#{@recipe.name}" %>

<div class="d-flex justify-content-between align-items-center">
  <% if can?(:edit, @recipe) %>
    <%= link_to "Generate Shopping List", shopping_list_path, class: 'btn btn-primary' %>
  <% end %>
  <% if can?(:edit, @recipe) %>
    <%= link_to "New food", new_food_path, class:"btn btn-outline-secondary mt-3" %>
  <% end %>
</div>

<div class="row my-5 gap-5">
  <div class="col-md-12">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <h3 class="mb-0"><%= @recipe.name %></h3>
        <div class="mb-1 text-body-secondary"><%= @recipe.created_at.strftime('%d %b %y') %></div>
            <p class="card-text mb-ato">Preparation time: <%= @recipe.preparation_time %></p>
            <p class="card-text mb-ato">Cooking time: <%= @recipe.cooking_time %></p>
        <i class="d-inline-block mb-2 text-primary-emphasis">Created by: <%= @recipe.user.name %></i>
        <div class="d-flex gap-5 mt-3">
        <% if can?(:edit, @recipe) %>
          <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %>
        <% end %>
          <%= link_to "Back to recipe", recipes_path %>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
          <% if can?(:edit, @recipe) %>
            <%= button_to "Delete this recipe", @recipe, method: :delete, class:"btn btn-danger my-3" %>
            <%= button_to "Make #{@recipe.public ? 'private' : 'public'}", 
              toggle_recipe_path(@recipe),
              method: :patch,
              class: "btn btn-primary" 
            %>
          <% end %>
        </div>
      </div>
      <div class="col-auto d-none d-lg-block bg-black">
        <img src="https://scalebranding.com/wp-content/uploads/2020/03/fun-food-logo-1080x1080.jpg" alt="logo" class="bd-placeholder-img" width="250" height="250" />
      </div>
    </div>
  </div>
  <hr />
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
      <% @user_foods.each_with_index do |food, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= food.name %></td>
          <td><%= food.quantity %></td>
          <td>$<%= food.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
