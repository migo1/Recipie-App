<!-- shopping_list.html.erb -->


<div class="d-flex text-center">
  <div class="col-md-6">
    <h3>Amount of food items to buy $<%= @total_price %></h3>
  </div>
  <div class="col-md-6">
    <h3>Total value of food needed $<%= @total_price %></h3>
  </div>
</div>

<div class="row">
  <h1 class="text-center">Shopping List</h1>
  
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
      <% @missing_foods.each_with_index do |food, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= food.name %></td>
          <td><%= food.quantity %></td>
          <td>$<%= food.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @missing_foods.any? %>
  <ul>
    <% @missing_foods.each do |food| %>
      <li><%= food.name %> (Quantity: <%= food.quantity %>)</li>
    <% end %>
  </ul>
  <p>Total Price of Missing Food: $<%= @total_price %></p>
<% else %>
  <p>No missing food items.</p>
<% end %>
