<% content_for :title, "Recipes" %>
<h1>Recipes</h1>

<% if user_signed_in? %>
  <%= link_to raw('<i class="fas fa-plus"></i> New recipe'), new_recipe_path, class: "btn btn-outline-secondary" %>
<% end %>

<div class="my-5">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe), class:"text-dark link-offset-2 link-underline link-underline-opacity-0" do %>
      <div class="row g-0 border p-4 my-3">
        <div class="col-md-6">
          <h3><%= recipe.name %></h3>
          <% if can?(:edit, recipe) %>
            <%= button_to "Delete this recipe", recipe, method: :delete, class: "btn btn-danger my-3" %>
          <% end %>
        </div>
        <div class="col-md-6">
          <p><%= recipe.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
